<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="fundo_app" parent="AppTheme">
        <item name="android:background">#009999</item>
        <item name="android:padding">15dp</item>
    </style>
    
    <style name="fundo_interno_app" parent="AppTheme">
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="titulo" parent="AppTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    
    <style name="listagem" parent="AppTheme">
        <item name="android:textColor">#009999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="label" parent="AppTheme">
        <item name="android:textColor">#009999</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="edittext" parent="AppTheme">
        <item name="android:textColor">#009999</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="atributo" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

</resources>
